    <link rel="stylesheet" href="styles.css">
    <script>
        // Function to display popup message on form submission
        function showPopup(event) {
            event.preventDefault(); // Prevent form from submitting immediately
            if (confirm("Are you sure you want to submit the form?")) {
                document.getElementById('evaluationForm').submit(); // Submit form if confirmed
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <header>
            <img src="logo.png" alt="Politeknik Malaysia Seberang Perai">
            <h1>Final Year Project Evaluation Form</h1>
        </header>
        <!-- Form to capture project evaluation details -->
        <form id="evaluationForm" action="result.php" method="POST" onsubmit="showPopup(event)">
            <!-- Input for Project ID -->
