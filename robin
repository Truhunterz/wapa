//output
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Form Output</title>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
  }
  .output-container {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 300px;
    margin: 20px auto;
  }
  .output-container h2 {
    text-align: center;
  }
  .output-container p {
    font-weight: bold;
  }
</style>
</head>
<body>

<div class="output-container">
  <h2>Form Output</h2>
  <div id="output"></div>
</div>

<script>
  // Function to get query parameters
  function getQueryParams() {
    const params = {};
    const queryString = window.location.search.substring(1);
    const queries = queryString.split("&");
    for (const query of queries) {
      const [key, value] = query.split("=");
      params[decodeURIComponent(key)] = decodeURIComponent(value || "");
    }
    return params;
  }

  // Display form data
  function displayFormData() {
    const params = getQueryParams();
    const outputDiv = document.getElementById("output");
    outputDiv.innerHTML = `
      <p>Text Input: ${params.text_input}</p>
      <p>Radio Button: ${params.radio_button}</p>
      <p>Checkbox 1: ${params.checkbox_1 || "Unchecked"}</p>
      <p>Checkbox 2: ${params.checkbox_2 || "Unchecked"}</p>
      <p>Dropdown: ${params.dropdown}</p>
      <p>Date: ${params.date_input}</p>
    `;
  }

  // Call display function on page load
  window.onload = displayFormData;
</script>

</body>
</html>
